<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>

<ul>
<% @restaurant.reviews.each do |r|%>
  <li>
  <%= r.rating %>:
  <%= r.content %>
  </li>
<% end %>
</ul>
<%= link_to  "Add new review", new_restaurant_review_path(@restaurant) %>
